{% extends 'layout.twig' %}

{% block head %}
    <title>Article</title>
{% endblock %}

{% block content %}
<a class="button-secondary" href="index.php">Accueil</a>

<h1>Le super blog de l'AVBN !</h1>

<div class="news">
    <h3 class="title">
        {{ post.title }} le <em>{{ post.frenchCreationDate }}</em>
    </h3>
    <p class="content">{{ post.content }}</p>
</div>

<h2>Ajouter un commentaire</h2>

{% if session.role is defined %}
    <form action="index.php?action=addComment&id={{ post.identifier }}" method="post">
        <div>
            <label for="author">Auteur</label><br />
            <input type="text" id="author" name="author" />
        </div>
        <div>
            <label for="comment">Commentaire</label><br />
            <textarea id="comment" name="comment"></textarea>
        </div>
        <div>
            <input type="submit" />
        </div>
    </form>
{% endif %}

<h2>Commentaires</h2>

{% if comments is defined %}
    <div class="comments">
    {% for comment in comments %}
        <div class="comment">
            <div class="title">
                <p><strong>{{ comment.author }}</strong> le {{ comment.frenchCreationDate }}
                    {% if session.role == 'Admin' %}
                    (<a href="index.php?action=updateComment&id={{ comment.identifier }}">modifier</a>)
                    (<a href="index.php?action=deleteComment&id={{ comment.identifier }}">supprimer</a>)
                    {% endif %}
                </p>
            </div>
            <div class="content">
                <p>{{ comment.comment }}</p>
            </div>
        </div>
    {% endfor %}
    </div>
{% endif %}
{% endblock %}