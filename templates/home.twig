{% extends 'layout.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <section class="banner" style="background-image: url('./ressources/images/vector-shapes-2.jpg');">
        <div class="wrapper">
            <div class="title">
                <h1>Accueil</h1>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="./ressources/images/vector-bottom-right-white.svg" alt="">
    </section>
    <section class="work position-relative">
        <img class="vector-shape vector-shape-top" src="./ressources/images/vector-top-left-white-2.svg" alt="">
        <div class="wrapper">
            <div class="box">
                <div class="icon"><i class="fas fa-file"></i></div>
                <div class="question">
                    <h2>Mon travail vous plaît ?</h2>
                    <p>N'hésitez pas à consulter mon CV !</p>
                </div>
                <a class="button-primary button-yellow" href="./ressources/documents/Florian-Jourde-CV.pdf" target=”_blank”><i class="fas fa-download"></i>Télécharger le document</a>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="./ressources/images/vector-bottom-right-dark-grey.svg" alt="">
    </section>
{% endblock %}