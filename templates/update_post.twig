{% extends 'layout.twig' %}

{% block title %}Modification de l'article{% endblock %}

{% block content %}
   <section class="banner offset-next-element" style="background-image: url('/public/ressources/images/{{ post.image }}');">
      <div class="wrapper">
         <div class="title">
            <h1>Modification de l'article</h1>
         </div>
      </div>
      <img class="vector-shape vector-shape-bottom" src="/public/ressources/images/vector-bottom-right-white.svg" alt="">
   </section>
   <section class="update-post position-relative">
      <div class="wrapper">
         <div class="page management">
            <div class="post icon-spacing">
               <div class="header">
                  <h3 class="title"><i class="fas fa-newspaper"></i>{{ post.title }}</h3>
                  {% if session.role == 'Admin' %}
                     <div class="actions icon-spacing">
                        <a class="hide" href="?action=post&id={{ post.identifier }}"><i class="fas fa-eye"></i>Voir</a>
                     </div>
                  {% endif %}
               </div>
               <form action="?action=updatePost&id={{ post.identifier }}" method="post">
                  <textarea id="title" name="title">{{ post.title }}</textarea>
                  <div class="header">
                     <h3 class="title"><label for="content"><i class="fas fa-pen-nib"></i>Contenu de l'article</label></h3>
                  </div>
                  <textarea id="content" name="content">{{ post.content }}</textarea>
                  <div class="infos">
                     <h3><i class="fas fa-user"></i>{{ user }}</h3>
                     <p><i class="fas fa-calendar"></i>{{ post.creationDate }}</p>
                  </div>
                  <input class="button-form button-very-dark-green" type="submit" value="Modifier" />
               </form>
            </div>
         </div>
      </div>
      <img class="vector-shape vector-shape-bottom behind" src="/public/ressources/images/vector-bottom-right-dark-grey.svg" alt="">
   </section>
{% endblock %}