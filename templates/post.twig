{% extends 'layout.twig' %}

{% block head %}
    <title>Article</title>
{% endblock %}

{% block content %}
<a class="button-secondary" href="index.php">Accueil</a>

<h1>Le super blog de l'AVBN !</h1>

<div class="posts">
    <div class="post">
        <div class="title">
            <h3>{{ post.title }} le {{ post.frenchCreationDate }}</h3>
            {% if session.role == 'Admin' %}
                <div class="actions">
                    <a href="index.php?action=updatePost&id={{ post.identifier }}">modifier</a>
                    <a href="index.php?action=deletePost&id={{ post.identifier }}">supprimer</a>
                </div>
            {% endif %}
        </div>
        <p class="content">
            <span class="description">{{ post.content }}</span>
        </p>
    </div>
</div>


    {% if session.role is defined %}
    <h2>Ajouter un commentaire</h2>
    <form action="index.php?action=addComment&id={{ post.identifier }}" method="post">
        <div>
            <label for="author">Auteur</label><br />
            <input type="text" id="author" name="author" />
        </div>
        <div>
            <label for="comment">Commentaire</label><br />
            <textarea id="comment" name="comment"></textarea>
        </div>
        <div>
            <input type="submit" />
        </div>
    </form>
{% endif %}

{% if comments is not empty %}
    <h2>Commentaires</h2>
    <div class="comments">
    {% for comment in comments %}
        <div class="comment">
            <div class="title">
                <p><strong>{{ comment.author }}</strong> le {{ comment.frenchCreationDate }}</p>
                    {% if session.role == 'Admin' %}
                    <div class="actions">
                        <a href="index.php?action=updateComment&id={{ comment.identifier }}">modifier</a>
                        <a href="index.php?action=deleteComment&id={{ comment.identifier }}">supprimer</a>
                    </div>
                    {% endif %}
            </div>
            <div class="content">
                <p>{{ comment.comment }}</p>
            </div>
        </div>
    {% endfor %}
    </div>
{% endif %}
{% endblock %}