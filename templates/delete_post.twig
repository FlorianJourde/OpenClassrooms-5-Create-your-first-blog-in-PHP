{% extends 'layout.twig' %}

{% block title %}Suppression de l'article{% endblock %}

{% block content %}

    {#    <section class="banner offset-next-element" style="background-image: url('./ressources/images/vector-shapes-2.jpg');">#}
    <section class="banner offset-next-element" style="background-image: url('./ressources/images/{{ post.image }}');">
