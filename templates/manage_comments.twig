{% extends 'layout.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block content %}
    <section class="banner offset-next-element" style="background-image: url('/public/ressources/images/monokai-2.jpg');">
        <div class="wrapper">
            <div class="title">
                <h1>Gestion des commentaires</h1>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="/public/ressources/images/vector-bottom-right-white.svg" alt="">
    </section>
    <section class="management position-relative">
        <div class="wrapper">
            {% for post in posts %}
                <div class="single page" style="background-color: {{ random(['var(--clr-dark-green)', 'var(--clr-dark-blue)', 'var(--clr-dark-purple)', 'var(--clr-dark-yellow)', 'var(--clr-dark-orange)', 'var(--clr-dark-pink)']) }};">
                    <div class="post">
                        <div class="header">
                            <h3 class="title icon-spacing"><i class="fas fa-newspaper"></i>{{ post.title }}</h3>
                            {% if session.role == 'Admin' %}
                                <div class="actions icon-spacing white">
                                    <a class="hide" href="?action=post&id={{ post.identifier }}"><i class="fas fa-eye"></i>Voir</a>
                                    <a class="edit" href="?action=updatePost&id={{ post.identifier }}"><i class="fas fa-edit"></i>Modifier</a>
                                    <a class="delete" href="?action=deletePost&id={{ post.identifier }}"><i class="fas fa-trash"></i>Supprimer</a>
                                </div>
                            {% endif %}
                        </div>
                            <p class="description">{{ post.content }}</p>
                        <div class="infos icon-spacing">
                            <h3><i class="fas fa-user"></i>{{ post.username }}</h3>
                            <p><i class="fas fa-calendar"></i>{{ post.creationDate }}</p>
                        </div>
                    </div>
                    {% for comment in post.hiddenComments %}
                        <div class="comment">
                            <div class="header">
                                <p class="username icon-spacing"><i class="fas fa-user"></i>{{ comment.username }}</p>
                                {% if (session.role == 'Admin') or (session.id == comment.user_id) %}
                                    <div class="actions icon-spacing">
                                        <a class="hide" href="?action=showComment&id={{ comment.identifier }}"><i class="fas fa-eye"></i>Accepter</a>
                                        <a class="edit" href="?action=updateComment&id={{ comment.identifier }}"><i class="fas fa-edit"></i>Modifier</a>
                                        <a class="delete" href="?action=deleteComment&id={{ comment.identifier }}"><i class="fas fa-trash"></i>Supprimer</a>
                                    </div>
                                {% endif %}
                            </div>
                            <p class="date">{{ comment.creationDate }}</p>
                            <div class="content">
                                <p>{{ comment.comment }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        <img class="vector-shape vector-shape-bottom behind" src="/public/ressources/images/vector-bottom-right-dark-grey.svg" alt="">
    </section>
{% endblock %}