{% extends 'layout.twig' %}

{% block head %}
   <title>Accueil</title>
{% endblock %}

{% block content %}
   <h1>Le super blog de l'AVBN !</h1>
   <p><a href="index.php?action=post&id={{ post.identifier }}">Retour au billet</a></p>
   <h2>Modification de l'article</h2>

   <form action="index.php?action=updatePost&id={{ post.identifier }}" method="post">
      <p>{{ user }}</p>
      <div>
         <label for="title">Titre de l'article</label><br />
         <textarea id="title" name="title">{{ post.title }}</textarea>
      </div>
      <div>
         <label for="content">Contenu de l'article</label><br />
         <textarea id="content" name="content">{{ post.content }}</textarea>
      </div>
      <div>
         <input type="submit" value="Modifier" />
      </div>
   </form>
{% endblock %}