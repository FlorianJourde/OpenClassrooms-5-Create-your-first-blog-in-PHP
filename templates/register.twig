{% extends 'layout.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block content %}
    <section class="banner offset-next-element" style="background-image: url('/public/ressources/images/monokai-3.jpg');">
        <div class="wrapper">
            <div class="title">
                <h1>S'enregistrer</h1>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="/public/ressources/images/vector-bottom-right-white.svg" alt="">
    </section>
    <section class="register position-relative">
        <div class="wrapper">
            <form class="page icon-spacing" action="?action=addUser" method="post">
                <div>
                    <label for="username"><i class="fas fa-user"></i>Nom d'utilisateur</label><br />
                    <input type="text" id="username" name="username" />
                </div>
                <div>
                    <label for="email"><i class="fas fa-at"></i>Email</label><br />
                    <input type="email" id="email" name="email">
                </div>
                <div>
                    <label for="password"><i class="fas fa-key"></i>Mot de passe</label><br />
                    <input type="password" id="password" name="password">
                </div>
                <input class="button-form button-dark-orange" type="submit" />
            </form>
        </div>
        <img class="vector-shape vector-shape-bottom" src="/public/ressources/images/vector-bottom-right-dark-grey.svg" alt="">
    </section>
{% endblock %}