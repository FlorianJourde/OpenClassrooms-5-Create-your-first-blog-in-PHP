{% extends 'layout.twig' %}

{% block head %}
    <title>Accueil</title>
{% endblock %}

{% block content %}
    <section class="banner" style="background-image: url('./ressources/images/vector-shapes-2.jpg');">
        <div class="wrapper">
            <div class="title">
                <h1>Suppression du commentaire</h1>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="./ressources/images/vector-bottom-right-white.svg" alt="">
    </section>
    <div class="wrapper">
        <p><a href="index.php?action=post&id={{ post.identifier }}">Retour Ã  l'article</a></p>
        <h2>Souhaitez-vous vraiment supprimer le commentaire ?</h2>
        <form action="index.php?action=deleteComment&id={{ comment.identifier }}" method="post">
            <div class="comment">
                <div class="title">
                    <p><strong>{{ comment.author }}</strong> le {{ comment.creationDate }}</p>
                </div>
                <div class="content">
                    <p>{{ comment.comment }}</p>
                </div>
            </div>
            <div>
                <input type="submit" value="Supprimer" />
            </div>
        </form>
    </div>

{% endblock %}