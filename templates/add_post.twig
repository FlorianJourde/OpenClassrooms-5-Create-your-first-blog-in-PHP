{% extends 'layout.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block content %}
    <section class="banner offset-next-element" style="background-image: url('./ressources/images/monokai-4.jpg');">
        <div class="wrapper">
            <div class="title">
                <h1>Ajouter un article</h1>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="./ressources/images/vector-bottom-right-white.svg" alt="">
    </section>
    <section class="add-post position-relative">
        <div class="wrapper">
            <form class="page" action="index.php?action=addPost" method="post" enctype="multipart/form-data">
                <div>
                    <label for="title">Titre de l'article</label><br />
                    <input type="text" id="title" name="title">
                </div>
                <div>
                    <label for="content">Contenu de l'article</label><br />
                    <textarea id="content" name="content"></textarea>
                </div>
                <input type="file" name="file">
                <input class="button-form button-blue" type="submit" />
            </form>
        </div>
        <img class="vector-shape vector-shape-bottom" src="./ressources/images/vector-bottom-right-dark-grey.svg" alt="">
    </section>
{% endblock %}