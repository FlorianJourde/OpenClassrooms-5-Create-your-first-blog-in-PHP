    <script src="https://kit.fontawesome.com/3297382b62.js" crossorigin="anonymous"></script>
    <title>{% block title %}Accueil{% endblock %} | Florian Jourde</title>
</head>
<body>
    <div id="frame">
        {% include 'partials/navbar.twig' %}
        {% block content %}{% endblock %}
        {% include 'partials/footer.twig' %}
    </div>
    {% include 'partials/top_page.twig' %}
    {#    <script src="https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"></script>#}
    {#    <script src="https://cdnjs.cloudflare.com/ajax/libs/tui-editor/1.4.10/tui-editor-Editor.min.js"></script>#}
    {#    <script type="importmap">#}
    {#    { "imports": {#}
    {#      "@toast-ui/editor":        "https://uicdn.toast.com/editor/latest/toastui-editor-all.min.js"#}
    {#    } }#}
    {#    </script>#}

    <div id="mobile-menu" class="menu mobile-only">
        <a type="button" class="close-menu"><i class="fas fa-times"></i></a>
        <ul class="navigation-links">
            {% if session.is_authenticated == true %}
                <li style="color: var(--clr-grey)">Bonjour <span style="font-weight: 600;">{{ session.username }}</span> !</li>
            {% endif %}
            <li><a class="button-tertiary button-white" href="?action=archive">Articles</a></li>
            <li><a class="button-tertiary button-white" href="?action=contact">Contact</a></li>
        </ul>
        {% if session.is_authenticated != true %}
            <ul class="navigation-user">
                <li><a class="button-secondary button-white" href="?action=register"><i class="fas fa-user-plus"></i>S'enregistrer</a></li>
                <li><a class="button-primary button-white" href="?action=login"><i class="fas fa-sign-in-alt"></i>Se connecter</a></li>
            </ul>
        {% else %}
            <ul class="navigation-user">
                <li><a class="button-primary button-white" href="?action=logoutUser"><i class="fas fa-sign-out-alt"></i>Se déconnecter</a></li>
            </ul>
        {% endif %}
    </div>
    <script src="/public/ressources/js/main.js" type="module"></script>
</body>
</html>