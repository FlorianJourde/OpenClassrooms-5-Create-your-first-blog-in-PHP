{% extends 'layout.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block content %}
    <section class="banner offset-next-element" style="background-image: url('/public/ressources/images/monokai/monokai-4.jpg');">
        <div class="wrapper">
            <div class="title">
                <h1>Ajouter un article</h1>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom" src="/public/ressources/images/vectors/vector-bottom-right-white.svg" alt="">
    </section>
    <section class="add-post position-relative">
        <div class="wrapper">
            <div class="page management">
{#            <div id="editor"></div>#}
{#            <div id="viewer"></div>#}
                <div class="post icon-spacing">

                    <form action="?action=addPost" method="post" enctype="multipart/form-data">
                    <div class="form-field">
                        <div class="header">
                            <label class="title" for="title"><i class="fas fa-newspaper"></i>Titre de l'article</label>
                        </div>
                        <input type="text" id="title" name="title">
                    </div>
                    <div class="form-field">
                        <div class="header">
                            <label class="title" for="content"><i class="fas fa-pen-nib"></i>Contenu de l'article</label>
                            <div class="actions icon-spacing">
                                <p class="markdown-tooltip"><i class="fas fa-question-circle"></i>Infos</p>
                            </div>
                        </div>
                        <textarea id="content" name="content"></textarea>
                    </div>
{#                    <label for="file" class="label-file button-primary button-green">Choisir une image</label>#}
                    <input class="input-file" type="file" name="file">
                    <div class="infos">
                        <h3><i class="fas fa-user"></i>{{ session.username }}</h3>
{#                        <p><i class="fas fa-calendar"></i>{{ post.creationDate }}</p>#}
                    </div>
                    <input class="button-form button-very-dark-blue" type="submit" />
{#                    </div>#}
                </form>
                </div>
            </div>
        </div>
        <img class="vector-shape vector-shape-bottom behind" src="/public/ressources/images/vectors/vector-bottom-right-dark-grey.svg" alt="">
    </section>
{% endblock %}