{% extends 'layout.twig' %}

{% block title %}Contact{% endblock %}

{% block content %}
    <section class="banner offset-next-element" style="background-image: url('/ressources/images/monokai/monokai-5.jpg');">
        <div class="wrapper">
            <div class="title">
                <h1>Contact</h1>
            </div>
        </div>

        <svg class="vector-shape fill-white vector-shape-bottom" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 400" width="1440" height="400" preserveAspectRatio="none" >
            <use href="/ressources/images/vectors/vector-bottom-right.svg#swoop-2-bottom-left-white"/>
        </svg>

    </section>
    <section class="contact position-relative">
        <div class="wrapper wrapper-small">
                <form action="/contact" class="page icon-spacing" method="post">
                    <div class="form-field">
                        <div class="header">
                            <label for="firstname" class="title"><i class="fas fa-user"></i>Pr√©nom</label><br />
                        </div>
                        <input type="text" id="firstname" name="firstname" />
                    </div>
                    <div class="form-field">
                        <div class="header">
                            <label for="lastname" class="title"><i class="fas fa-address-card"></i>Nom</label><br />
                        </div>
                        <input type="text" id="lastname" name="lastname" />
                    </div>
                    <div class="form-field">
                        <div class="header">
                            <label for="email" class="title"><i class="fas fa-at"></i>Email</label><br />
                        </div>
                        <input type="email" id="email" name="email">
                    </div>
                    <div class="form-field subject-field">
                        <div class="header">
                            <label for="subject" class="title"><i class="fas fa-clipboard"></i>Objet</label><br />
                        </div>
                        <input type="subject" id="subject" name="subject">
                    </div>
                    <div class="form-field">
                        <div class="header">
                            <label for="message" class="title"><i class="fas fa-envelope"></i>Message</label><br />
                        </div>
                        <textarea id="message" name="message"></textarea>
                    </div>
                    <input class="button-form button-very-dark-yellow" type="submit" />
                </form>
        </div>

        <svg class="vector-shape fill-very-dark-grey vector-shape-bottom z-index-negative-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 400" width="1440" height="400" preserveAspectRatio="none" >
            <use href="/ressources/images/vectors/vector-bottom-right.svg#swoop-2-bottom-left-white"/>
        </svg>

    </section>
{% endblock %}