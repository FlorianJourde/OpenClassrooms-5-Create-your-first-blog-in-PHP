{% extends 'layout.twig' %}

{% block head %}
   <title>Accueil</title>
{% endblock %}

{% block content %}
{#   <section class="banner offset-next-element" style="background-image: url('./ressources/images/vector-shapes-2.jpg');">#}
   <section class="banner offset-next-element" style="background-image: url('./ressources/images/{{ post.image }}');">
      <div class="wrapper">
         <div class="title">
            <h1>Modification de l'article</h1>
         </div>
      </div>
      <img class="vector-shape vector-shape-bottom" src="./ressources/images/vector-bottom-right-white.svg" alt="">
   </section>
   <section class="update-post position-relative">
      <div class="wrapper">
         <div class="page management">

            <div class="post">
{#               {{ dump(post) }}#}
{#               <div class="header">#}

               <div class="header">
                  {#                            <div class="title">#}
                  <h3 class="title"><i class="fas fa-newspaper"></i>{{ post.title }}</h3>
                  {% if session.role == 'Admin' %}
                     <div class="actions">
                        <a class="hide" href="index.php?action=post&id={{ post.identifier }}"><i class="fas fa-eye"></i>Voir</a>
                        <a class="edit" href="index.php?action=updatePost&id={{ post.identifier }}"><i class="fas fa-edit"></i>Modifier</a>
                        {#                                    <a class="delete" href="index.php?action=deletePost&id={{ post.identifier }}"><i class="fas fa-trash"></i>Supprimer</a>#}
                     </div>
                  {% endif %}
                  {#                            </div>#}
               </div>

{#                  <p><a href="index.php?action=post&id={{ post.identifier }}">Retour au billet</a></p>#}

                  <form action="index.php?action=updatePost&id={{ post.identifier }}" method="post">
{#                     <div>#}
      {#                  <label for="title">Titre de l'article</label><br />#}
{#                        <h3 class="title"><label for="title"><i class="fas fa-newspaper"> </i>{{ post.title }}</label></h3>#}
      {#                  <h3 class="title"><i class="fas fa-newspaper"></i>{{ post.title }}</h3>#}
                        <textarea id="title" name="title">{{ post.title }}</textarea>
{#                     </div>#}
{#                     <div>#}

                        <div class="header">
                           <h3 class="title"><label for="content"><i class="fas fa-pen-nib"></i>Contenu de l'article</label></h3>
                        </div>

{#                        <h3 class="title"><i class="fas fa-newspaper"></i>{{ post.title }}</h3>#}
                        <textarea id="content" name="content">{{ post.content }}</textarea>
{#                     </div>#}

{#                     <p>{{ user }}</p>#}
{#                     {{ dump(post.creationDate) }}#}
                     <div class="infos">
                        <h3><i class="fas fa-user"></i>{{ user }}</h3>
                        <p><i class="fas fa-calendar"></i>{{ post.creationDate }}</p>
                     </div>
{#                     <div>#}
                        <input type="submit" value="Modifier" />
{#                     </div>#}
                  </form>
            </div>
         </div>
      </div>
      <img class="vector-shape vector-shape-bottom vector-shape-behind" src="./ressources/images/vector-bottom-right-dark-grey.svg" alt="">
   </section>
{% endblock %}