{% extends 'layout.twig' %}

{% block content %}
    <a class="button-secondary" href="index.php">Accueil</a>

    <h1>Le super blog de l'AVBN !!</h1>
    <h2>Derniers billets du blog</h2>

    {% for post in posts %}
        <div class="news">
            <h3 class="title">{{ post.title }} le {{ post.frenchCreationDate }}</h3>
            <p class="content">
                {{ post.content }}
                <br />
                <em><a href="index.php?action=post&id={{ post.identifier }}">Commentaires</a></em>
            </p>
        </div>
    {% endfor %}
{% endblock %}
